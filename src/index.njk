---
layout: default
title: grant frazier
htmlClass: html
bodyClass: body
---

<div class="home-container">
  <div class="title-block">
    <h1 class="name">grant frazier</h1>
    <p class="subtitle">and words he has written</p>
    <p>twitter: <a href="https://x.com/gantisdant">@gantisdant</a></p>
  </div>

  <h2>poem</h2>
  <ul>
  {% for poem in collections.poems %}
  <li>
    <a href="{{ poem.url }}">{{ poem.data.title }}</a>
    <div class="meta-info">
      {% if poem.data.publicationUrl %}
        <a href="{{ poem.data.publicationUrl }}">{{ poem.data.publication }}</a>
      {% else %}
        <span>{{ poem.data.publication }}</span>
      {% endif %}
      <span class="separator"> // </span>
      <span>{{ poem.data.date | format("MMM yyyy") }}</span>
    </div>
  </li>
  {% endfor %}
  </ul>

<h2>essay</h2>
  <ul>
  {% for essay in collections.essays %}
    <li>
      <a href="{{ essay.url }}">{{ essay.data.title }}</a>
      <div class="meta-info">
        {% if essay.data.publicationUrl %}
          <a href="{{ essay.data.publicationUrl }}" class="publication">{{ essay.data.publication }}</a>
        {% else %}
          <span class="publication">{{ essay.data.publication }}</span>
        {% endif %}
        <span class="date">// {{ essay.data.date | format("MMM yyyy") }}</span>
      </div>
    </li>
  {% endfor %}
  </ul>
</div>
